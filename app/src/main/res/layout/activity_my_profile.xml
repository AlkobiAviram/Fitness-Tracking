            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="My User Name"
                android:textSize="30dp"
                android:layout_marginTop="5dp"
                android:textColor="#000"
                android:id="@+id/userNameTittle"/>


        </LinearLayout>


