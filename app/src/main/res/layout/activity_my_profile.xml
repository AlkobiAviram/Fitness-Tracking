<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#8cccfa"

    >
    <LinearLayout

        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#8cccfa"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:background="#8cccfa"
            android:weightSum="1"
            >


            <Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="My Profile"
                android:textColor="#000"
                android:textSize="20sp"
                android:textStyle="bold"
                android:background="#ff0e0f"
                android:textColorLink="#000" />


            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="My Exercises"
                android:textColor="#000"
                android:background="#fef9ff"
                android:textSize="20sp"
                android:textStyle="bold"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Aviram Alkobi"
                android:textSize="40dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="5dp"
                android:textColor="#000"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="30dp"
            android:orientation="vertical"
            android:textColor="#000000"
            >

            <ImageView android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/my_photo"
                android:layout_marginTop="5dp"
                android:layout_gravity="center_horizontal"/>

        </LinearLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Age :"
                    android:id="@+id/textView10"
                    android:layout_column="26"
                    android:textSize="20dp"
                    android:textColor="#000"
                    android:layout_marginLeft="25dp"
                    android:textStyle="bold"

                    />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/editText9"
                    android:layout_column="33"
                    android:text="26"
                    android:editable="false"
                    android:textColor="#000"
                    android:layout_marginLeft="30dp"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Height :"
                    android:id="@+id/height"
                    android:layout_column="26"
                    android:textSize="20dp"
                    android:textColor="#000"
                    android:layout_marginLeft="25dp"
                    android:textStyle="bold"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/editText10"
                    android:layout_column="33"
                    android:text="175"
                    android:editable="false"
                    android:textColor="#000"
                    android:layout_marginLeft="30dp"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Button"
                    android:layout_column="60"
                    android:layout_marginLeft="60dp"
                    android:id="@+id/MyExercises" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Weight :"
                    android:id="@+id/weight"
                    android:layout_column="26"
                    android:textSize="20dp"
                    android:textColor="#000"
                    android:layout_marginLeft="25dp"
                    android:textStyle="bold"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/editText11"
                    android:layout_column="27"
                    android:text="70"
                    android:editable="false"
                    android:textColor="#000"
                    android:layout_marginLeft="30dp"
                    android:layout_span="20" />
            </TableRow>

        </TableLayout>



        <Button android:layout_width="190dp"
            android:layout_height="38dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:text="Edit"
            android:textColor="#000"
            android:background="#2683c2"
            android:id="@+id/buttonEdit"
            android:textStyle="bold"/>



        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:text="!!!!! need to add process bar !!!!!"
            android:textColor="#000"
            />



    </LinearLayout>




</ScrollView>